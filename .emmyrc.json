{
  "runtime": {
    "version": "LuaJIT",
    "requirePattern": [
      "lua/?.lua",
      "lua/?/init.lua",
      "?/lua/?.lua",
      "?/lua/?/init.lua"
    ]
  },
  "workspace": {
    "library": [
      "$VIMRUNTIME",
      "$HOME/.local/share/nvim/site/pack/core/opt"
    ],
    "ignoreGlobs": [
      "**/*_spec.lua"
    ]
  }
}

